mixin box(backgroundColor="bg-light", textColor="text-dark", imageColor="bg-dark", headline="Another headline", subheading="And an even wittier subheading.")
    div(class=`${backgroundColor} ${textColor} mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden`)
        div(class="my-3 py-3")
            h2(class="display-5")= headline
            p(class="lead")= subheading
        div(class=`${imageColor} box-shadow mx-auto`, style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;")
